page {
  height: 100%;
  overflow-y: hidden;
}
.topTabSwiper{
  position: fixed;
  top:0rpx;
  z-index:999;
  width:100%;
}
.tab{
  float: left; 
  width: 50%;
  text-align: center;
  padding: 11rpx 0; 
  border-bottom: 1px solid #ccc; 
  background: #fff;
}
.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}
.tabBorer{
  border-bottom: 1px solid #1f80c6; 
  color: #1f80c6;
}
.swiper{
  width: 100%;
  /* height: 1460rpx; */
  overflow: hidden;
  margin-top:70rpx;
}
.swiper_con{
  width: 100%; 
  overflow: hidden;
  background: #fff;
}
.swiper_cen{
  width: 96%;
  margin:0 auto;
  overflow: hidden;
  padding-bottom:30rpx;
}
.wpiper_cen{
  width: 100%;
  height: 15rpx;
  background: #f4f4f4;
}
.swiper_cen .image{
  width:100%;
  overflow: hidden;
  margin-top:15rpx;
}
.swiper_cen .image image{
  width:100%;
  border-radius: 8rpx;
}
.swiper_cen .message{
  display: block;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  margin-top: 10rpx;
  font-size:32rpx;
  color:#222;
}
.swiper_cen .company{
  display: block;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  margin-top: 10rpx;
  font-size:24rpx;
  color:#b2b2b2;
}
.find{
  overflow: hidden;
  border-bottom: 1px solid #e4e4e4;
}
/* .find:last-child{
  border-bottom:none;
} */
.findLeft{
  width: 58%;
  height: 195rpx;
  margin:30rpx 0;
  float: left;
}
.findLeft .title{
  display: block;
  height: 80%;
  width: 97%;
  font-size: 32rpx;
  color: #222222;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow:ellipsis;
}
.swiper_cen .time{
  display: block;
  height: 20%;
  width:100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size:24rpx;
  color:#b2b2b2;
}
.findRight{
  width:42%;
  height: 195rpx;
  margin:30rpx 0;
  float: right;
}
.findRight image{
  width:100%;
  height: 195rpx;
  border-radius: 5rpx;
}