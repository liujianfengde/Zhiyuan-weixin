.btn-sudoku .nav-item{
  border-bottom: none;
}
.nav-item{
  width: 100%;
  display: block;
  min-height: 80rpx;
  border-bottom: 1px dashed #e4e4e4;
}
.name{
  display: block;
  width: 100%;
  color:#333;
  font-size: 30rpx;
  padding: 16rpx 0 5rpx 0;
  line-height: 40rpx;
  overflow: hidden;
}
.item-image{
  width:100%;
  height: 380rpx;
  border-radius: 5rpx;
  overflow: hidden;
  margin:10rpx 0;
}
.item-image image{
  display: block;
  width:100%;
  height: 384rpx;
  border-radius: 5rpx;
}
.item-bottom{
  width: 100%;
  height:40rpx;
  font-size: 28rpx;
  color: #b2b2b2;
  padding: 8rpx 0 8rpx 0;
}