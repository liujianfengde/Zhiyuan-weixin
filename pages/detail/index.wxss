@import "../../wxParse/wxParse.wxss";
.con{
  width: 100%; 
  overflow: hidden;
  background: #fff;
  margin-top:20rpx;
  padding-bottom: 50rpx;
}
.conCen{
  width: 95%;
  margin:0 auto;
}
.conCen .message{
  display: block;
  width:100%;
  overflow: hidden;
  text-overflow:ellipsis;
  margin-top: 10rpx;
  font-size:45rpx;
  color:#222;
  line-height: 65rpx;
}
.conCen .company{
  display: block;
  width:100%;
  height: 70rpx;
  border-bottom:1px solid #e4e4e4;
  line-height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  margin-top: 10rpx;
  font-size:24rpx;
  color:#b2b2b2;
  margin-bottom: 30rpx;
}
image{
  width: 100%;
  margin:20rpx 0;
}
.content{
  display: block;
  color: #444444;
  font-size: 35rpx;
  text-indent: 55rpx;
  line-height: 60rpx;
}
